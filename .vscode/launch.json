    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Run",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/dev_run.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "EXPERIMENT_DIRECTORY": "${workspaceFolder}/iplanner",
                "DATA_DIRECTORY": "${workspaceFolder}/iplanner",
                "PYTORCH_ENABLE_MPS_FALLBACK":"1"
            }
        },
        {
            "name": "Run Data Generation",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/iplanner/data_generation.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "noDebug": true,
            "env": {
                "EXPERIMENT_DIRECTORY": "${workspaceFolder}/iplanner",
                "DATA_DIRECTORY": "${workspaceFolder}/iplanner",
                //"DATA_DIRECTORY": "${workspaceFolder}/../iPlanner_Data",
                "PYTORCH_ENABLE_MPS_FALLBACK":"1"
            }
        },
        {
            "name": "Debug Data Generation",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/iplanner/data_generation.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "EXPERIMENT_DIRECTORY": "${workspaceFolder}/iplanner",
                "DATA_DIRECTORY": "${workspaceFolder}/iplanner",
                "PYTORCH_ENABLE_MPS_FALLBACK":"1"
            }
        },
        {
            "name": "Run Training",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/iplanner/training_run.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "noDebug": true,
            "env": {
                "EXPERIMENT_DIRECTORY": "${workspaceFolder}/iplanner",
                "DATA_DIRECTORY": "${workspaceFolder}/iplanner",
                //"DATA_DIRECTORY": "${workspaceFolder}/../iPlanner_Data",
                "PYTORCH_CUDA_ALLOC_CONF": "max_split_size_mb:512",
                "PYTORCH_ENABLE_MPS_FALLBACK":"1"
            }
        },
        {
            "name": "Debug Training",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/iplanner/training_run.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "EXPERIMENT_DIRECTORY": "${workspaceFolder}/iplanner",
                "DATA_DIRECTORY": "${workspaceFolder}/../iPlanner_Data",
                //"DATA_DIRECTORY": "${workspaceFolder}/iplanner",
                "PYTORCH_CUDA_ALLOC_CONF": "max_split_size_mb:512",
                "PYTORCH_ENABLE_MPS_FALLBACK":"1"
            }
        },
    ]
}